              <span class="input-group-btn">
                <button class="btn btn-secondary" type="button">Go!</button>
              </span>
            </div>
          </div>
         

          <!-- Categories Widget -->
          <div class="card my-4">
            <h5 class="card-header">
              Categories
              <a href="/" style="color:black; float:right"><i class="fa fa-cog" aria-hidden="true"></i></a>
            </h5>
            
            <div class="card-body">
              
              <ul class="list-unstyled mb-0" >
                <li>
                  <a href="/" class="catego"><b>About</b></a>
                  
                </li>
                <li>
                  <a href="/project/index" class="catego">Projects</a>
                  <li class="page-item">
                    <a href="#" class="catego_sub">쮸발1?</a>
