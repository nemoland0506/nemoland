                  <li class="page-item">
                    <a href="#" class="catego_sub">쮸쭈발1?</a>
                  </li>
                </li>
              </ul>
                    
            </div>
          </div>
          
          <!-- Side Widget -->
          <div class="card my-4">
            <h5 class="card-header">Side Widget</h5>
            <div class="card-body">
              You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
            </div>
          </div>

        </div>
        
        <!-- Blog Entries Column -->
        <div class="col-md-9">

          <h1 class="my-4 mx-3">Category
            <small> - Setting</small>
          </h1>

          <!-- Blog Post -->
          <div class="card mb-4">
            <!-- Main Image
            <div style="text-align:center; margin-top:25px;">
              <img class="" src="/assets/profile.jpg" width="248px" height="248px" alt="Card image cap">
            </div>
            -->
            
            <!-- Add Category -->
            <div class="card-body">
            
              <form accept-charset="UTF-8" action="/blogs/cate_create" class="new_user" id="new_user" method="GET">
                
                <div class="form-group">
                  <input class="form-control" id="user_email" name="cate_name" type="text" style="width:45%; float:left;" placeholder="Main Category Name is ..">
                  <input class="btn btn-default mx-1" type="submit" value="+" style="float:left; font-weight:bold;">

                </div>
                
              </form>
            </div>
            
            <!-- Add Sub Category & Check -->
            <div class="card-body row">
              <div class="col-md-6 my-2">
              
                <form accept-charset="UTF-8" action="/blogs/subcate_create" class="new_user card px-4 pt-4 pb-2" id="new_user" method="GET">
                  
                  <h3>Project</h3>
                  <ul>
                    <li>
                      쭈발1?
                      <a href="#" style="color:black;"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                      <a href="#" style="color:black;"><i class="fa fa-trash" aria-hidden="true"></i></a>
                    </li>
                    
                  </ul>
                  
                  
                  <div class="form-group">
                    <input type="hidden" value="1" />
                    <input class="form-control mt-3" id="user_email" name="subcate_name" type="text" style="width:70%; float:left;" placeholder="Sub Category Name is ..">
                    <input class="btn btn-default mt-3 mx-1" type="submit" value="Add" style="float:left">
                  </div>
                  
                </form>
              </div>
              
              <div class="col-md-6 my-2">
              
                <form accept-charset="UTF-8" action="#" class="new_user card px-4 pt-4 pb-2" id="new_user" method="GET">
                  
                  <h3>Project</h3>
                  <ul>
                    <li>
                      쭈발1?
                      <a href="#" style="color:black;"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                      <a href="#" style="color:black;"><i class="fa fa-trash" aria-hidden="true"></i></a>
                    </li>
                    
                  </ul>
                  
                  
                  <div class="form-group">
                    <input class="form-control mt-3" id="user_email" name="subcate_name" type="text" style="width:70%; float:left;" placeholder="Sub Category Name is ..">
                    <input class="btn btn-default mt-3 mx-1" type="submit" value="Add" style="float:left">
                  </div>
                  
                </form>
              </div>
              
              
              
              <% @mainCate.each do |mc| %>
              <div class="col-md-6 my-2">
              
                <form accept-charset="UTF-8" action="#" class="new_user card px-4 pt-4 pb-2" id="new_user" method="GET">
                  
                  
                  
                    <h3><%= mc.name %></h3>
                    
                  
                  
                  
                  <div class="form-group">
                    <input class="form-control mt-3" id="user_email" name="subcate_name" type="text" style="width:70%; float:left;" placeholder="Sub Category Name is ..">
                    <input class="btn btn-default mt-3 mx-1" type="submit" value="Add" style="float:left">
                  </div>
                  
                </form>
              </div>
              <% end %>
              
              
              
              
              
            </div>
            
            <!-- Introduce -->
